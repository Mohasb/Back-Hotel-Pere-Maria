{
  "$jsonSchema": {
    "bsonType": "object",
    "required": [
      "user_name",
      "email",
      "password",
      "role",
      "reservations"
    ],
    "properties": {
      "user_name": {
        "bsonType": "string",
        "description": "User's name as a string."
      },
      "email": {
        "bsonType": "string",
        "description": "User's email as a string."
      },
      "password": {
        "bsonType": "string",
        "description": "User's password as a string."
      },
      "role": {
        "bsonType": "string",
        "enum": ["user", "admin", "superAdmin"],
        "description": "User's role as a string: 'user', 'admin', or 'superAdmin'."
      },
      "reservations": {
        "bsonType": "array",
        "description": "Array of user reservations.",
        "items": {
          "bsonType": "object",
          "required": [
            "room_number",
            "check_in_date",
            "check_out_date"
          ],
          "properties": {
            "room_number": {
              "bsonType": "int",
              "description": "Room number for the reservation as an integer."
            },
            "check_in_date": {
              "bsonType": "date",
              "description": "Date of check-in for the reservation."
            },
            "check_out_date": {
              "bsonType": "date",
              "description": "Date of check-out for the reservation."
            }
          }
        }
      }
    }
  }
}
